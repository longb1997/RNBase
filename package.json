{
  "name": "rnbase",
  "version": "0.0.1",
  "description": "React Native Template",
  "repository": "https://github.com/longb1997/RNBase.git",
  "author": "Royce Chua",
  "license": "MIT",
  "scripts": {
    "android": "cd android &&./gradlew clean && cd .. && npx react-native run-android ",
    "ios": "cd ios && xcodebuild clean && cd .. && npx react-native run-ios",
    "yarn-ios": "yarn && yarn pod",
    "android-release": "npx react-native run-android --variant=release",
    "start": "npx react-native start --reset-cache",
    "format": "prettier --write **/*.{ts,tsx,js,json,md}",
    "check-code": "prettier --check **/*.{ts,tsx,js,json,md}",
    "test": "jest",
    "link": "npx react-native link",
    "apk": "cd android &&./gradlew clean && ./gradlew assembleRelease && cd ..",
    "aab": "cd android &&./gradlew clean && ./gradlew bundleRelease && cd ..",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "pod": "cd ios && pod install && cd ..",
    "code-push-android": "appcenter codepush release-react -a hoanglonghaui97gmail.com/RNAdamo-base-A -d Production",
    "code-push-ios": "appcenter codepush release-react -a hoanglonghaui97gmail.com/RNAdamo-base-IOS -d Production",
    "prepare": "husky install",
    "images": "node scripts/image.script.js",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.13.4",
    "@react-native-community/masked-view": "^0.1.10",
    "@react-native-community/netinfo": "^5.9.10",
    "@react-navigation/bottom-tabs": "^5.11.7",
    "@react-navigation/material-bottom-tabs": "^5.3.13",
    "@react-navigation/native": "^5.9.2",
    "@react-navigation/stack": "^5.14.2",
    "@reduxjs/toolkit": "^1.5.0",
    "@types/react-redux": "^7.1.16",
    "axios": "^0.21.0",
    "formik": "^2.2.6",
    "i18next": "^20.2.2",
    "moment": "^2.29.1",
    "react": "17.0.1",
    "react-fast-compare": "^3.2.0",
    "react-i18next": "^11.8.7",
    "react-native": "0.64.0",
    "react-native-calendars": "^1.1254.0",
    "react-native-fast-image": "^8.3.4",
    "react-native-flash-message": "^0.1.22",
    "react-native-gesture-handler": "^1.10.3",
    "react-native-image-crop-picker": "^0.35.3",
    "react-native-iphone-x-helper": "^1.3.1",
    "react-native-keyboard-aware-scroll-view": "^0.9.3",
    "react-native-lightweight-responsive": "^0.0.6",
    "react-native-modal": "^11.6.1",
    "react-native-paper": "^4.7.1",
    "react-native-reanimated": "^2.0.0",
    "react-native-rename": "^2.8.1",
    "react-native-responsive-fontsize": "^0.5.0",
    "react-native-safe-area-context": "^3.2.0",
    "react-native-screens": "^2.18.1",
    "react-native-splash-screen": "^3.2.0",
    "react-native-vector-icons": "^8.0.0",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-persist": "^6.0.0",
    "redux-saga": "^1.1.3",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/jest": "^26.0.20",
    "@types/react-native": "^0.63.51",
    "@types/react-redux": "^7.1.16",
    "@types/react-test-renderer": "17.0.1",
    "@types/redux-logger": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "eslint": "^7.20.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "metro-react-native-babel-preset": "^0.65.1",
    "prettier": "^2.2.1",
    "react-test-renderer": "17.0.1",
    "typescript": "^4.1.5"
  },
  "resolutions": {
    "@types/react": "^17"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
